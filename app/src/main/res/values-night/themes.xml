<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_night</item>

        <item name="colorAccent">@color/color_accent_night</item>

        <item name="colorAccentedSurface">@color/color_divider_light</item>
        <item name="colorIcon">@android:color/white</item>
        <item name="colorDivider">@color/color_divider_dark</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorMessageText">@color/color_message_text_night</item>
        <item name="colorAuthorText">@color/color_author_text_night</item>
        <item name="colorCounterBackground">@color/color_counter_background_night</item>
        <item name="colorArchiveIconBackground">@color/color_archive_icon_background_night</item>
        <item name="colorMessageSwipeOn">@color/color_message_swipeOn_night</item>
        <item name="colorIsOnline">@color/color_isOnline_night</item>

        <item name="colorChipGroupBackground">@color/color_chipGroup_background_night</item>
        <item name="colorChipGroupXButton">@color/color_chipGroup_x_button_night</item>
        <item name="colorChipGroupX">@color/color_chipGroup_x_night</item>
        <item name="colorIsSelected">@color/color_isSelected_night</item>

        <item name="colorSnackbarBackground">@color/color_snackbar_background_night</item>
        <item name="colorSnackbarText">@color/color_snackbar_text_night</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>

        <item name="colorChatItemBackground">@color/color_primary_dark_night</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/color_divider_dark</item>
    </style>
</resources>