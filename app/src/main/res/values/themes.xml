<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="colorAccentedSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/color_gray</item>
        <item name="colorDivider">@color/color_divider_dark</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>

        <item name="colorChatItemBackground">@color/white</item>
        <item name="colorMessageText">@color/color_message_text</item>
        <item name="colorAuthorText">@color/color_author_text</item>
        <item name="colorCounterBackground">@color/color_counter_background</item>
        <item name="colorArchiveIconBackground">@color/color_archive_icon_background</item>
        <item name="colorMessageSwipeOn">@color/color_message_swipeOn</item>
        <item name="colorIsOnline">@color/color_isOnline</item>
        <item name="colorChipGroupBackground">@color/color_chipGroup_background</item>
        <item name="colorChipGroupXButton">@color/color_chipGroup_x_button</item>
        <item name="colorChipGroupX">@color/color_chipGroup_x</item>
        <item name="colorIsSelected">@color/color_isSelected</item>
        <item name="colorSnackbarBackground">@color/color_snackbar_background</item>
        <item name="colorSnackbarText">@color/color_snackbar_text</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/color_divider_dark</item>
    </style>
</resources>